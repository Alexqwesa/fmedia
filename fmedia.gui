
menu mfile {
	item "&Open..." {
		action OPEN
		hotkey "Ctrl+O"
	}
	item "&Add..." {
		action ADD
		hotkey "Insert"
	}
	item "-" {
	}
	item "Select &All" {
		action SELALL
		hotkey "Ctrl+A"
	}
	item "In&vert Selection" {
		action SELINVERT
	}
	item "&Remove" {
		action REMOVE
		hotkey "Delete"
	}
	item "&Clear List" {
		action CLEAR
	}
	item "-" {
	}
	item "C&opy to Clipboard" {
		action COPYFILE
		hotkey "Ctrl+C"
	}
	item "Copy File&name to Clipboard" {
		action COPYFN
	}
	item "Open Fo&lder" {
		action SHOWDIR
	}
	item "&Delete From Disk" {
		action DELFILE
		hotkey "Shift+Delete"
	}
	item "-" {
	}
	item "Minimize to &Tray" {
		action HIDE
		hotkey "Ctrl+M"
	}
	item "E&xit" {
		action QUIT
	}
}

menu mplay {
	item "&Play/Pause" {
		action PAUSE
		hotkey "Space"
	}
	item "&Stop" {
		action STOP
		hotkey "S"
	}
	item "&Next" {
		action NEXT
		hotkey "N"
	}
	item "P&revious" {
		action PREV
		hotkey "P"
	}
	item "-" {
	}
	item "Seek &Forward" {
		action FFWD
		hotkey "Right"
	}
	item "Seek &Back" {
		action RWND
		hotkey "Left"
	}
	item "-" {
	}
	item "Volume &Up" {
		action VOLUP
		hotkey "Up"
	}
	item "Volume &Down" {
		action VOLDOWN
		hotkey "Down"
	}
}

menu mrec {
	item "Sta&rt/Stop" {
		action REC
		hotkey "Ctrl+R"
	}
	item "&Play and Record" {
		action PLAYREC
	}
	item "Play &Mixed and Record" {
		action MIXREC
	}
	item "Open Recordings Fo&lder" {
		action SHOWRECS
	}
}

menu mconvert {
	item "&Convert..." {
		action SHOWCONVERT
		hotkey "Ctrl+T"
	}
}

menu mhelp {
	item "&About" {
		action ABOUT
	}
}

menu mtray {
	item "fmedia" {
		style default
		action SHOW
	}
	item "Playback" {
		submenu mplay
	}
	item "Exit" {
		action QUIT
	}
}

dialog dlg {
	filter "*.mp3;*.ogg;*.flac;*.wav;*.m3u;*.m3u8;*.cue\x00*.mp3;*.ogg;*.flac;*.wav;*.m3u;*.m3u8;*.cue\x00*.*\x00*.*\x00\x00"
}

window wmain {
	title "fmedia"
	position 100 100 380 300
	borderstick 7
	style visible
	icon {
		filename "fmedia.ico"
	}

	mainmenu mm {
		item "&File" {
			submenu mfile
		}
		item "&Playback" {
			submenu mplay
		}
		item "&Record" {
			submenu mrec
		}
		item "&Convert" {
			submenu mconvert
		}
		item "&Help" {
			submenu mhelp
		}
	}

	trackbar tpos {
		position 0 0 300 20
		style no_ticks both visible
		page_size 5
		onscrolling SEEKING
		onscroll SEEK
	}

	trackbar tvol {
		position 300 0 60 20
		style no_ticks both visible
		range 125
		value 100
		page_size 5
		onscrolling VOL
	}

	listview vlist {
		position 0 25 360 175
		style explorer_theme grid_lines multi_select visible
		dblclick PLAY
		popupmenu mfile

		column "#" {
			width 35
			align right
		}
		column Artist {
		}
		column Title {
			width 200
		}
		column Duration {
			width 50
			align right
		}
		column Info {
		}
		column Filename {
		}
	}

	paned pntop {
		child tpos {
			resize cx
		}
		child tvol {
		}
	}
	paned pnlist {
		child vlist {
			resize cx cy
		}
	}

	statusbar stbar {
		style visible
		parts 100 -1
	}

	trayicon tray_icon {
		icon {
			filename "fmedia.ico"
		}
		popupmenu mtray
		lclick SHOW
	}
}

window wconvert {
	parent wmain
	position 300 100 300 200
	style popup
	title "Convert"

	font {
		name Arial
		height 10
	}

	mainmenu mmconv {
		item "&Convert!" {
			action CONVERT
		}
	}

	editbox eout {
		position 10 10 200 25
		style visible
	}

	button boutbrowse {
		position 220 10 35 25
		style visible
		text "..."
		action OUTBROWSE
	}
}

window wabout {
	parent wmain
	title "fmedia"
	position 300 300 300 200
	style popup
	opacity 90

	label labout {
		position 15 15 300 60
		style visible
		font {
			name Arial
			height 13
			style bold
		}
	}
}
